//%attributes = {"lang":"en"} comment added and reserved by 4D.//LO_valid_byName_byPassword//20150830 Programmer's name// ログインユーザテーブルをクエリC_TEXT($1;$name)$name:=$1C_TEXT($2;$password)$password:=$2C_LONGINT($0;$isValid)$isValid:=0READ ONLY([LOGIN_USER])QUERY([LOGIN_USER];[LOGIN_USER]LO_DEL_FLAG=0;*)QUERY([LOGIN_USER]; & ;[LOGIN_USER]LO_NAME=$name)FIRST RECORD([LOGIN_USER])$numOfRecs:=Records in selection([LOGIN_USER])If ($numOfRecs=1)If ([LOGIN_USER]LO_PASSWORD=$password)$isValid:=1End if End if $0:=$isValid