//%attributes = {"lang":"en"} comment added and reserved by 4D.//A00_Authentication//20150830 Programmer's name//認証メソッドC_LONGINT($dlg_ok)C_LONGINT($isValid)$isValid:=0//０で認証失敗、１で認証OK$numOfRecs:=LO_NumOfRecs //ログインユーザテーブルの件数If ($numOfRecs=0)$isValid:=1//レコード件数がゼロなら認証OKElse $dlg_ok:=A02_Login //レコードが登録されていればログインダイアログIf ($dlg_ok=1)$isValid:=A02_varValid_get //認証フラグの値を取得ALERT("$isValid="+String($isValid))//debugデバッグ用End if End if $isValid:=1//debugデバッグ中は強制的に１にしておく$0:=$isValid